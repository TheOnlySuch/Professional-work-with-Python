from requests_html import HTMLSession
import json

def get_links(url):
    links =[]
    for l in range(0, 40):
        session = HTMLSession()
        r = session.get(url+str(l))
        r.html.render(sleep=3, scrolldown=5)
        el= r.html.find('.serp-item__title')
        for i in el:
            links.append(i.attrs['href'])
    return links

def vacancy(links):
    data = {}
    h = 1
    for url in links:
        session = HTMLSession()
        r = session.get(url)
